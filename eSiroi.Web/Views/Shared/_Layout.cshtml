<!DOCTYPE html>

<html lang="en" >

<head>
    <base href="@Request.Url.AbsolutePath" />
    <link rel="shortcut icon" href="favicon.ico" type="image/icon"> <link rel="icon" href="favicon.ico" type="image/icon">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/css/styles")
    @Scripts.Render("~/bundles/modernizr")
    @*@Scripts.Render("~/bundles/vendor")*@
    <script src="~/scripts/angular.js" type="text/javascript"></script>
    <script src="angular-idle.min.js" type="text/javascript"></script>
    <script src="~/scripts/angular-sanitize.js" type="text/javascript"></script>
    <script src="~/scripts/angular-ui-router.js"></script>
    <script src="~/scripts/ct-ui-router-extras.js" type="text/javascript"></script>
    <script src="~/scripts/ui-utils.js" type="text/javascript"></script>
    <script src="~/scripts/angular-local-storage.min.js" type="text/javascript"></script>
    <script src="~/scripts/smart-table.min.js" type="text/javascript"></script> 
    
    @Scripts.Render("~/bundles/eSiroi")
   
    
    
    @*<script src="~/scripts/smart-table.min.js" type="text/javascript"></script>*@ 
   @Scripts.Render("~/bundles/bootstrap")     
    <script src="~/Scripts/ng-grid.debug.js" type="text/javascript"></script>   
   
      <script type="text/javascript">

    window.onunload = function () {
       // console.log(window.localStorage);
        window.localStorage.clear();
        return 'Do you really want to close ?';
    };
    </script>
</head>
<body ng-app="eSiroi.Web" ng-strict-di>
   
    <div class="navbar navbar-inverse navbar-fixed-top main-navbar" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" ui-sref="Home"><em>e-Siroi</em></a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li><a ui-sref-active="active" ui-sref="Home"><span class="glyphicon glyphicon-home"> Home</span></a></li>

                    <li data-ng-hide="authentication.isAuth"><a ui-sref-active="active" ui-sref="login">Login</a></li>
                    <li><a ui-sref="pageundrconstrct" ui-sref-active="active">Payments Screen</a></li>
                    

                </ul>
                <ul class="nav navbar-nav navbar-right" data-ng-hide="!authentication.isAuth">
                    <li class="dropdown">
                        <a href="#" target="_self" class="dropdown-toggle" data-toggle="dropdown"><em>Welcome,{{authentication.userName }} </em> <span class="glyphicon glyphicon-user pull-right "><span class="caret arrow"></span></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="">login as <strong><em>{{'"' + authentication.roles[0]+'"'}}</em></strong>  </a></li>
                            <li class="divider"></li>
                            <li><a href="">Account Settings  <span class="glyphicon glyphicon-cog pull-right"></span></a></li>
                            <li class="divider"></li>
                            <li><a ng-click="signOut()">Sign Out <span class="glyphicon glyphicon-log-out pull-right"></span></a></li>
                        </ul>
                    </li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </div>

    <div class="container body-content" >
        @RenderBody()
    </div>
    @RenderSection("scripts", required: false)
    <script>
        // Old browser detection 
        if (Modernizr.mq('only all') === false) {
            // No Media Query Support Detected - do something
            window.location.href = "Home/Oldbrowser";
        }
    </script>
</body>
</html>
